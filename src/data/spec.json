{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "width": 200,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/data.json",
            "format": {
                "type": "json",
                "parse": {
                    "b": "number"
                }
            },
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "a"
                    ],
                    "ops": [
                        "average"
                    ],
                    "fields": [
                        "b"
                    ],
                    "as": [
                        "average_b"
                    ]
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "y_step",
            "value": 21
        },
        {
            "name": "height",
            "update": "bandspace(domain('y').length, 0.1, 0.05) * y_step"
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "rect",
            "style": [
                "bar"
            ],
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "fill": {
                        "value": "#4c78a8"
                    },
                    "x": {
                        "scale": "x",
                        "field": "average_b"
                    },
                    "x2": {
                        "scale": "x",
                        "value": 0
                    },
                    "y": {
                        "scale": "y",
                        "field": "a"
                    },
                    "height": {
                        "scale": "y",
                        "band": true
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "average_b"
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "nice": true,
            "zero": true
        },
        {
            "name": "y",
            "type": "band",
            "domain": {
                "data": "source_0",
                "field": "a",
                "sort": true
            },
            "range": {
                "step": {
                    "signal": "y_step"
                }
            },
            "paddingInner": 0.1,
            "paddingOuter": 0.05
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "title": "Average of b",
            "labelFlush": true,
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "zindex": 1
        },
        {
            "scale": "x",
            "orient": "bottom",
            "grid": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "gridScale": "y",
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        },
        {
            "scale": "y",
            "orient": "left",
            "title": "a",
            "zindex": 1
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
