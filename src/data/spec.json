{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "autosize": "pad",
  "padding": 5,
  "width": 200,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "data/data.json",
      "format": {"type": "json", "parse": {"b": "number"}},
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["a"],
          "ops": ["average"],
          "fields": ["b"],
          "as": ["average_b"]
        }
      ]
    }
  ],
  "signals": [
    {"name": "y_step", "value": 21},
    {
      "name": "height",
      "update": "bandspace(domain('y').length, 0.1, 0.05) * y_step"
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "rect",
      "style": ["bar"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": [
            {
              "test": "datum[\"average_b\"] === null || isNaN(datum[\"average_b\"])",
              "value": null
            },
            {"value": "#4c78a8"}
          ],
          "tooltip": {
            "signal": "{\"Average of b\": format(datum[\"average_b\"], \"\"), \"a\": ''+datum[\"a\"]}"
          },
          "x": {"scale": "x", "field": "average_b"},
          "x2": {"scale": "x", "value": 0},
          "y": {"scale": "y", "field": "a"},
          "height": {"scale": "y", "band": true}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {"data": "source_0", "field": "average_b"},
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {"data": "source_0", "field": "a", "sort": true},
      "range": {"step": {"signal": "y_step"}},
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Average of b",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 1
    },
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {"scale": "y", "orient": "left", "grid": false, "title": "a", "zindex": 1}
  ],
  "config": {"axisY": {"minExtent": 30}}
}
